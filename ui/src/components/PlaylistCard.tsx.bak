`;

const Container = styled.div`
  height: 100%;
  padding: 10px;
  border-radius: 3px;
  cursor: pointer;
  transition: opacity 0.12s ease-in;
  overflow: hidden;
  &:hover {
    opacity: 0.8;
  }
`;

const Title = styled.div`
  display: flex;
  width: 100%;
  align-items: center;
  h3 {
    margin-top: 10px;
    width: 100%;
    color: #eeeeee;
    font-size: 18px;
